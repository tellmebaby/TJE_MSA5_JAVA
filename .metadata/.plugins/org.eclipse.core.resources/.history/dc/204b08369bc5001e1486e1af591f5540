package _1000;

import java.util.Iterator;

public class _1357 {

	public static void main(String[] args) {
		
		int ln = 2;
		int check = 0;
		int lnCheck = 1;
		
		if(check == 0) {
			for (int i = 0; i <= 2; i++) {
				for (int j = 0; j < lnCheck; j++) {
					System.out.println("*");
				}
				lnCheck += 1;
			}
		}else {
			for (int i = 2; i >= 0; i--) {
				for (int j = 0; j < lnCheck; j++) {
					System.out.println("*");
				}
				lnCheck -= 1;
			}
		}
		
	}
}
